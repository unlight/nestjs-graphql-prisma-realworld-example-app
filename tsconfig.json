{
  "compilerOptions": {
    "module": "commonjs",
    "target": "es2017",
    "importHelpers": true,
    "declaration": false,
    "removeComments": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "esModuleInterop": true,
    "sourceMap": true,
    "skipLibCheck": true,
    "strictNullChecks": true,
    "incremental": true,
    "outDir": "./dist",
    "baseUrl": ".",
    "paths": {
      "@generated/*": ["src/@generated/*"],
      "app_modules/*": ["src/app_modules/*"]
    },
    "plugins": [
      {
        "transform": "ts-auto-mock/transformer",
        "cacheBetweenTests": false
      }
    ]
  },
  "include": ["src/**/*.ts", "test/**/*.ts", "@generated/*", "prisma/*.ts"]
}
